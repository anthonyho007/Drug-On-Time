        <!-- login modal -->
   <div id="login" class="modal fade">
     <div class="modal-dialog" role="document">
       <div class="modal-content">
         <div class="modal-header bg-info">
           <button type="button" class="close" data-dismiss="modal" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
           <h4 class="modal-title">Login to Drugs on Time.</h4>
         </div>
         <div class="modal-body">


           <div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab">Sign up</a></li>
    <li role="presentation"><a href="#loginPage" aria-controls="loginPage" role="tab" data-toggle="tab">Log in</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="signup">

      <form>

      	<h5 class="m-b-2">Sign up Information</h5>

			<fieldset class="form-group">
				<label for="name">name</label>
				<input type="text" class="form-control" id="name">
			</fieldset>

			<fieldset class="form-group">
				<label for="mail">Email</label>
				<input type="email" class="form-control" id="mail">
			</fieldset>
        	<fieldset class="form-group">
          		<label for="password">Password</label>
          		<input type="password" class="form-control" id="password">
	        </fieldset>
	        <fieldset class="form-group">
	          	<label for="passwordConfirm">Confirm Password</label>
	          	<input type="Password" class="form-control" id="passwordConfirm">
	        </fieldset>
	        <fieldset class="form-group">
	          	<label for="HealthID" class="form-controll">Are a doctor?</label></br>
	          	<input type="checkbox" class="" id="DrCheck">  Yes I am a doctor!</input>
	        </fieldset>
	        <fieldset class="form-group DrIDC">
	          	<label for="DrID">Please provide Dr ID</label>
	          	<input type="text" class="form-control" id="DrID">
	        </fieldset>
	        <fieldset class="form-group PSIDC">
	          	<label for="HealthID">Please provide Health ID</label>
	          	<input type="text" class="form-control" id="HealthID">
	        </fieldset>

        <button type="submit" class="btn btn-primary btn-lg">Login</button>

      </form>
      <!-- /registration form -->

    </div>
   	<div role="tabpanel" class="tab-pane" id="loginPage">

      <form>
      <h5 class="m-b-2">Login Information</h5>
        <fieldset class="form-group">
          <label for="mail">Email</label>
          <input type="email" class="form-control" id="mail">
        </fieldset>
        <fieldset class="form-group">
          <label for="password">Password</label>
          <input type="text" class="form-control" id="password">
        </fieldset>
        <button type="submit1" class="btn btn-primary btn-lg">Login</button>

      </form>
      <!-- /login form -->

    </div>
  </div>

</div>




         </div>
