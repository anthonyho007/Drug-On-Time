    <script type="text/javascript">

    var countChecked = function() {
      var n = $( "input:checked" ).length;
      if ( n > 0){
        $(".DrIDC").css("display", "block");
        $(".PSIDC").css("display", "none");
      }else{
        $(".DrIDC").css("display","none");
        $(".PSIDC").css("display","block");
      }
    };
    countChecked();

    $( "input[type=checkbox]" ).on( "click", countChecked );


  // function coun  var n = $( "input:checked" ).length;

    </script>
